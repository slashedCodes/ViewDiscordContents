{
    "name": "View Discord Contents",
    "description": "View Discord File Contents Instead Of Downloading Them.",
    "version": "1.0",
    "manifest_version": 2,

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "*://cdn.discordapp.com/",
        "*://discord.com/",
        "*://images-ext-2.discordapp.net/"
    ],
    
    "browser_action": {
        "default_popup": "mainextension.html",
        "default_icon": {
          "16": "/images/16.png",
          "32": "/images/32.png",
          "48": "/images/48.png",
          "128": "/images/128.png"
        }
      }
  }
